.footer
    width 100%
    border-top 1px solid var(--color-blue-light)
    background-color var(--color-purple-light)

    &-logo
        position absolute
        display flex
        align-items center
        gap 10px
        transition opacity 0.25s ease-in-out
        margin-top 10px
        left 10px

        &:hover
            opacity 0.7

        img
            fill var(--color-dark)
            width 25px

        h1
            font-size 24px
            font-weight 0
            color var(--color-dark)

    &-list
        display grid
        grid-template-columns repeat(3, 100px)
        justify-content center
        gap 10px 20px
        padding 20px 0

    &-item
        display flex
        justify-content center
        align-items center
        text-align center
        color var(--color-dark)