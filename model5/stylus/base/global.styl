*
    margin 0
    padding 0
    box-sizing border-box

li
    list-style none

a 
    text-decoration none
    color inherit

html
    height 100%

body
    display flex
    flex-direction column
    height 100%
    justify-content space-between
    align-items center
    font-family 'Roboto', sans-serif
    background-color white

.header
    &-title
        font-family 'Poppins', sans-serif
        font-weight 700
        color var(--color-dark)

    &-slogan
        font-weight 400
        color var(--color-dark)

.adventures
    &-title
        font-family 'Poppins', sans-serif
        font-weight 700
        color var(--color-blue)
        transition opacity 0.25s ease-in-out

        &:hover
            color var(--color-dark)
            opacity 0.7

.footer
    &-link
        font-size 16px
        font-weight 700
        transition opacity 0.25s ease-in-out

        &:hover
            opacity 0.7